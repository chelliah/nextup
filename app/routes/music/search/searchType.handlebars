<div class="row">
  <div class="col-md-2">
    <form action="#" method="get">
      <div class="form-group row">
        <div class="col-md-12">
          <label class="sr-only" for="search">Search</label>
          <input class="form-control mb-2" id="search" name="term" type="search" placeholder="search the music library" value="{{term}}" aria-label="search">
          <button class="btn btn-primary btn-block" type="submit">Search</button>
        </div>
      </div>
    </form>
  </div>

  <div class="col-md-9">
    {{> (lookup . 'resultType') showAllLink=false showPagination=true}}

    <div class="row justify-content-between">
      <a role="button" class="btn btn-primary col-sm-4 {{#unless enablePrevious}}disabled{{/unless}}" {{#if enablePrevious}}href="?term={{term}}&from={{previous}}"{{/if}}>Previous</a>
      <a role="button" class="btn btn-primary col-sm-4 {{#unless enableNext}}disabled{{/unless}}" {{#if enableNext}}href="?term={{term}}&from={{next}}"{{/if}}>Next</a>      
    </div>
  </div>
</div>