<div class="row px-2">
  {{#each albums}}
    <div class="card col-md-3 pt-2 border-top-0 border-right-0 border-left-0">  
      <a class="card-img-top" href="/music/album/{{album_id.value}}">
        {{#if lastfm_lg_image_url}}
          <img src="{{lastfm_lg_image_url}}" class="img-thumbnail">
        {{else}}  
          <img height="184px" width="184px" src="http://www.chirpradio.org/_/img/placeholders/album-art.png"  class="img-thumbnail">
        {{/if}}  
      </a>   
      <div class="card-body pt-2 pb-4 px-0">
        <h3 class="card-title"><a href="/music/album/{{album_id.value}}">{{title}}</a></h3>
        <h4 class="card-subtitle">
          {{#if is_compilation}}
            <div class="badge badge-info">Compilation</div>
          {{else}}
            by <a href="/music/artist/{{getArtistKeyProp album_artist}}">{{{album_artist.name}}}</a>
          {{/if}}
        </h4>
        <p class="mt-2">{{year}} – {{label}}{{#if disc_number}} – Disc {{disc_number}}{{/if}}</p>
        <ul class="list-inline">
        {{#each current_tags}}
          <li class="list-inline-item badge badge-secondary">{{formatTag this}}</li>
        {{/each}}
        </ul>        
      </div>
    </div>
  {{/each}} 
</div>