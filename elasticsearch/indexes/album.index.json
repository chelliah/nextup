{
  "settings": {
    "number_of_shards": 1, 
    "analysis": {
      "char_filter": {
        "normalize_characters": {
          "type": "mapping",
          "mappings": [
            "& => and",
            "$ => S",
            "ยบ => umber"
          ]
        }
      },
      "analyzer": {
        "default": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": ["lowercase", "asciifolding", "classic"]
        },
        "normalized": {
          "type": "custom",
          "char_filter": ["normalize_characters"],
          "tokenizer": "whitespace",
          "filter": ["lowercase", "asciifolding", "classic"]
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "title": {
         "type": "text",
         "copy_to": "normalized_title",
         "fields": {
            "raw": { 
              "type":  "keyword"
            }
          }
      },
      "normalized_title": {
        "type": "text",
        "analyzer": "normalized",
        "store": true
      },
      "album_artist": {
        "properties": {
          "name": {
              "type": "text",
              "copy_to": "normalized_name",
              "fields": {
                "raw": { 
                  "type":  "keyword"
                }
              }
          },
          "normalized_name": {
            "type": "text",
            "analyzer": "normalized",
            "store": true
          }
        }
      }
    }
  }
}